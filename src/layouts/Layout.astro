---
import { THEME, SITE_TITLE } from '../consts';
const { title } = Astro.props;
---
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | {SITE_TITLE}</title>
</head>
<body style="margin:0; font-family: sans-serif; display:flex; flex-direction:column; min-height:100vh; background:#f4f4f4;">
<nav style={`background:${THEME.primaria}; color:white; padding:1rem 5%;`}>
    <div style="max-width:1200px; margin:0 auto; display:flex; flex-wrap:wrap; align-items:center; justify-content:space-between; gap:15px;">
        
        <a href="/" style="display:flex; align-items:center; text-decoration:none; color:white; gap:10px;">
            <img src="/logo.png" alt="Logo" style="height: 40px; width: auto;" />
            <span style="font-size:1.1rem; font-weight:bold; line-height:1.2;">{SITE_TITLE}</span>
        </a>

        <div style="display:flex; align-items:center; gap:15px; flex-wrap:wrap;">
            <a href="/" style="color:white; text-decoration:none; font-weight:bold; font-size:0.9rem;">Home</a>
            <a href="/sobre" style="color:white; text-decoration:none; font-weight:bold; font-size:0.9rem;">Sobre</a>
            
            <form action="https://www.google.com/search" method="get" target="_blank" style="display:flex; align-items:center; background:white; border-radius:20px; padding:2px 8px;">
                <input type="hidden" name="q" value="site:guiagramadocanela.com.br">
                <input type="text" name="q" placeholder="Buscar..." style="border:none; outline:none; width:80px; font-size:0.8rem; padding:4px;">
                <button type="submit" style="background:none; border:none; cursor:pointer;">üîç</button>
            </form>
        </div>
    </div>
</nav>
<div style="width: 100%; height: 300px; overflow: hidden; position: relative;">
    <img 
  width="720" 
  height="360" 
  src="https://dying-peach-5qtkiqp0qs.edgeone.app/portico-gramado-rs.jpg" 
  alt="Entrada de Gramado"
  style="display: block; width: 100%; height: auto; border-radius: 10px;"
/>
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; text-shadow: 2px 2px 10px rgba(0,0,0,0.7); text-align: center; width: 90%;">
        <h2 style="font-size: 2rem; margin: 0;"></h2>
    </div>
</div>
<main style="flex:1; max-width:800px; margin:2rem auto; padding:2rem; background:white; border-radius:12px; width:90%;">
        <slot />
    </main>
    <footer style="background:#222; color:white; padding:2rem; text-align:center;">
    <p>&copy; 2026 {SITE_TITLE}</p>
    <div style="margin-top:10px;">
        <a href="/privacidade" style="font-size: 0.8rem; color: #ccc; text-decoration: none;">Pol√≠ticas de Privacidade</a>
    </div>
</footer>
