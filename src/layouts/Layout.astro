---
import { THEME, SITE_TITLE } from '../consts';
const { title } = Astro.props;
---
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | {SITE_TITLE}</title>
</head>
<body style="margin:0; font-family: sans-serif; display:flex; flex-direction:column; min-height:100vh; background:#f4f4f4;">
<nav style={`background:${THEME.primaria}; color:white; padding:1.5rem; text-align:center;`}>
    <a href="/" style="color:white; text-decoration:none; font-size:1.5rem; font-weight:bold; display:block; margin-bottom:10px;">{SITE_TITLE}</a>
    
    <div style="display:flex; flex-direction:column; align-items:center; gap:15px;">
        <div style="display:flex; gap:20px;">
            <a href="/" style="color:white; text-decoration:none; font-weight:bold;">Home</a>
            <a href="/sobre" style="color:white; text-decoration:none; font-weight:bold;">Sobre</a>
        </div>

        <form action="https://www.google.com/search" method="get" target="_blank" style="margin-top: 5px;">
            <input type="hidden" name="q" value="site:guiagramadocanela.com.br">
            <input type="text" name="q" placeholder="Buscar no guia..." style="padding: 5px 10px; border-radius: 20px; border: none; width: 180px; outline: none;">
            <button type="submit" style="background: none; border: none; cursor: pointer; font-size: 1.2rem; vertical-align: middle;">üîç</button>
        </form>
    </div>
</nav>
<div style="width: 100%; height: 300px; overflow: hidden; position: relative;">
    <img 
        src="https://i.ibb.co/3mS8m0R/portico-gramado-clean.jpg" 
        alt="Gramado e Canela" 
        style="width: 100%; height: 100%; object-fit: cover;"
    />
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; text-shadow: 2px 2px 10px rgba(0,0,0,0.7); text-align: center; width: 90%;">
        <h2 style="font-size: 2rem; margin: 0;">Explore o melhor da Serra Ga√∫cha</h2>
    </div>
</div>
<main style="flex:1; max-width:800px; margin:2rem auto; padding:2rem; background:white; border-radius:12px; width:90%;">
        <slot />
    </main>
    <footer style="background:#222; color:white; padding:2rem; text-align:center;">
    <p>&copy; 2026 {SITE_TITLE}</p>
    <div style="margin-top:10px;">
        <a href="/privacidade" style="font-size: 0.8rem; color: #ccc; text-decoration: none;">Pol√≠ticas de Privacidade</a>
    </div>
</footer>
