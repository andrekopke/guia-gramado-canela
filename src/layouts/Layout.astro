---
import { THEME, SITE_TITLE } from '../consts';
const { title } = Astro.props;
---
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | {SITE_TITLE}</title>
</head>
<body style="margin:0; font-family: sans-serif; display:flex; flex-direction:column; min-height:100vh; background:#f4f4f4;">
<nav style={`background:${THEME.primaria}; color:white; padding:1.5rem 10px; text-align:center;`}>
    <div style="max-width:100%; margin:0 auto; display:flex; flex-direction:column; align-items:center; gap:15px;">
        
        <a href="/" style="text-decoration:none; color:white; display:flex; flex-direction:column; align-items:center;">
            <img src="/logo.png" alt="Logo" style="height: 50px; width: auto; margin-bottom: 5px;" />
            <span style="font-size:1.3rem; font-weight:bold;">{SITE_TITLE}</span>
        </a>

        <div style="display:flex; gap:20px; justify-content:center;">
            <a href="/" style="color:white; text-decoration:none; font-weight:bold;">Home</a>
            <a href="/sobre" style="color:white; text-decoration:none; font-weight:bold;">Sobre</a>
        </div>
        
        <form action="https://www.google.com/search" method="get" target="_blank" style="display:flex; width:100%; max-width:250px; background:white; border-radius:20px; padding:5px 15px;">
            <input type="hidden" name="q" value="site:guiagramadocanela.com.br">
            <input type="text" name="q" placeholder="Buscar no guia..." style="border:none; outline:none; width:100%; font-size:1rem;">
            <button type="submit" style="background:none; border:none; cursor:pointer; font-size:1.1rem;">üîç</button>
        </form>
    </div>
</nav>
<div style="width: 100%; height: 300px; overflow: hidden; position: relative;">
    <img 
  width="720" 
  height="360" 
  src="https://dying-peach-5qtkiqp0qs.edgeone.app/portico-gramado-rs.jpg" 
  alt="Entrada de Gramado"
  style="display: block; width: 100%; height: auto; border-radius: 10px;"
/>
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; text-shadow: 2px 2px 10px rgba(0,0,0,0.7); text-align: center; width: 90%;">
        <h2 style="font-size: 2rem; margin: 0;"></h2>
    </div>
</div>
<main style="flex:1; max-width:800px; margin:2rem auto; padding:2rem; background:white; border-radius:12px; width:90%;">
        <slot />
    </main>
   <footer style="background:#222; color:white; padding:2rem 10px; text-align:center; width:100%; box-sizing:border-box;">
    <p style="margin:0;">&copy; 2026 {SITE_TITLE}</p>
    <div style="margin-top:15px;">
        <a href="/privacidade" style="color:#ccc; text-decoration:none; font-size:0.9rem; display:inline-block; border:1px solid #444; padding:5px 15px; border-radius:5px;">
            Pol√≠ticas de Privacidade
        </a>
    </div>
</footer>
