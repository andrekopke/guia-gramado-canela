---
import { THEME, SITE_TITLE } from '../consts';
const { title } = Astro.props;
---
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | {SITE_TITLE}</title>
</head>
<body style="margin:0; padding:0; font-family:sans-serif; display:flex; flex-direction:column; min-height:100vh; background:#f4f4f4; overflow-x:hidden; width:100vw;">

    <nav style={`background:${THEME.primaria}; color:white; padding:1.5rem 15px; width:100%; box-sizing:border-box;`}>
        <div style="display:flex; flex-direction:column; align-items:center; gap:15px; width:100%;">
            <a href="/" style="text-decoration:none; color:white; text-align:center;">
                <img src="/logo.png" alt="Logo" style="height:45px; width:auto;" />
                <div style="font-size:1.2rem; font-weight:bold; margin-top:5px;">{SITE_TITLE}</div>
            </a>
            <div style="display:flex; gap:20px; font-weight:bold;">
                <a href="/" style="color:white; text-decoration:none;">Home</a>
                <a href="/sobre" style="color:white; text-decoration:none;">Sobre</a>
            </div>
            <form action="https://www.google.com/search" method="get" target="_blank" style="display:flex; width:90%; max-width:280px; background:white; border-radius:20px; padding:5px 15px; box-sizing:border-box;">
                <input type="hidden" name="q" value="site:guiagramadocanela.com.br">
                <input type="text" name="q" placeholder="Buscar..." style="border:none; outline:none; width:100%; font-size:16px;">
                <button type="submit" style="background:none; border:none; cursor:pointer;">üîç</button>
            </form>
        </div>
    </nav>

    <main style="flex:1; width:100%; max-width:800px; margin:0 auto; padding:20px; box-sizing:border-box;">
        <slot />
    </main>

    <footer style="background:#222; color:white; padding:2rem 15px; text-align:center; width:100%; box-sizing:border-box;">
        <p>&copy; 2026 {SITE_TITLE}</p>
        <a href="/privacidade" style="color:#ccc; text-decoration:none; font-size:0.8rem; margin-top:10px; display:block;">Pol√≠ticas de Privacidade</a>
    </footer>

</body>
